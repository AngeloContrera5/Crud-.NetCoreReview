@model List<ContactoModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4>Lista contacto</h4>
    </div>
    <div class="card-body">
        <a asp-action="Save" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear nuevo</a>
        <hr />
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Correo</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>@item.idContacto</td>
                    <td>@item.nomContacto</td>
                    <td>@item.telContacto</td>
                    <td>@item.correoContacto</td>
                    <td>
                        <a asp-action="Update" asp-controller="Mantenedor" class="btn btn-primary btn-sb" asp-route-idContacto="@item.idContacto"><i class="bi bi-pencil-fill"></i> Editar</a>
                        <a asp-action="Delete" asp-controller="Mantenedor" class="btn btn-danger btn-sb" asp-route-idContacto="@item.idContacto"><i class="bi bi-trash3-fill"></i> Eliminar</a>
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

